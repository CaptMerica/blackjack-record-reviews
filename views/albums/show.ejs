<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/albums/new.css" />
<%- include('../partials/nav') %>
<main>
  <div>
  <h1><%= album.name %></h1>
  <section>
    <% if (user) { %>
      <form>
        <% if (album.owner?.equals(user?.profile._id)) { %> 
        <a href="/albums/<%= album._id %>/edit">
          <button class="btn">Edit Review</button>
        </a>
        <form action="/albums/<%= album._id %>?_method=DELETE" method="POST">
          <button class="btn" type="submit">Delete Review</button>
        </form>
        <% } %> 
      </form>
      <h2>Comments</h2>
      <% if (user) { %>
        <h3>Add a comment</h3>
        <ul>
          <% album.comments?.forEach(comment => { %>
            <li>
              <%= comment.content %> - <%= comment.commenter.name %>
            </li> 
          <% }) %>
        </ul>
        <form action="/albums/<%= album._id %>/comments" method="POST">
          <textarea name="content"></textarea><br>
          <button>Add Comment</button>
        </form>
      <% } %>
    <% } %>
  </section>
  </div>
</main>
<%- include("../partials/footer") %>